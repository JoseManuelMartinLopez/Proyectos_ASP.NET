
@{
    ViewBag.Title = "Validar";
}

<h2>Ingreso al Sistema</h2>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>Ingrese Usuario</td>
            <td>@Html.TextBox("user")</td>
        </tr>
        <tr>
            <td>Ingrese Password</td>
            <td>@Html.Password("password")</td>
        </tr>
        <tr>
            <td><input type="submit" value="Ingresar" onclick="validar()" /></td>     
        </tr>
    </table>
}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    function validar() {
        var usuario = $("#user").val();
        var password = $("#password").val();

        if (usuario == '') {
            alert('Indique el usuario');
            $("#user").focus();
            return false;
        }

        if (password == '') {
            alert('Indique el usuario');
            $("#user").focus();
            return false;
        }

        return true;
            
    }
</script>
